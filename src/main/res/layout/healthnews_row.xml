<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp">

            <ImageView
                android:id="@+id/full_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/healthnewsforlist"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/full_image"
                android:textSize="17sp"
                android:textStyle="bold"
                android:minLines="1"
                android:maxLines="1"
                android:textColor="#4285ca"
                android:layout_marginTop="5dp"
                android:text="A Guide To Rocky Mountain Vacations"/>


            <TextView
                android:id="@+id/detailssomes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headline"
                android:textSize="17sp"
                android:minLines="2"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:text="A Guide To Rocky Mountain Vacations"/>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/detailssomes"
                android:src="@mipmap/share"/>

            <TextView
                android:id="@+id/sharenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/detailssomes"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/textColor"
                android:text="Share Now"/>

            <TextView
                android:id="@+id/idvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textColor="#3c819f"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/sharenow"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textSize="14sp"
                android:layout_below="@id/detailssomes"
                android:layout_toRightOf="@id/sharenow"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="2 hours ago"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>