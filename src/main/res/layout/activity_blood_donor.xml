<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iaccess.iaccess.com.iaccess.AddSupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBackground"
                android:text="Blood Donor Register"
                android:textSize="18sp"
                />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".ReminderActivity">

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Name"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:id="@+id/nameEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Name"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="textPersonName"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="E-mail"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:id="@+id/emailEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="E-mail"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="textEmailAddress"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Address"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:id="@+id/addressEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Address"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:padding="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/districtEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="District"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:focusable="false"
                            android:clickable="false"
                            android:maxLines="1"
                            android:drawablePadding="10dp"
                            android:inputType="text"
                            android:padding="15dp" />

                        <EditText
                            android:id="@+id/thanaEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:clickable="false"
                            android:hint="Thana"
                            android:textSize="14sp"
                            android:gravity="start"
                            android:maxLines="1"
                            android:drawablePadding="10dp"
                            android:inputType="text"
                            android:padding="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="BloodGroup"
                        android:textSize="14sp"
                        android:layout_below="@+id/price"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:id="@+id/bloodgroupEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="BloodGroup"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:padding="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Age"
                        android:textSize="14sp"
                        android:layout_below="@+id/bloodgroupEdt"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:id="@+id/ageEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Age"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:layout_below="@+id/price"
                        android:layout_centerHorizontal="true" />


                    <EditText
                        android:id="@+id/genderEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Gender"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:padding="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Phone"
                        android:textSize="14sp"
                        android:layout_below="@+id/price"
                        android:layout_centerHorizontal="true" />


                    <EditText
                        android:id="@+id/phoneEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Phone"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="phone"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Password"
                        android:textSize="14sp"
                        android:layout_below="@+id/phoneEdt"
                        android:layout_centerHorizontal="true" />


                    <EditText
                        android:id="@+id/passwordEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter Password"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Confirm Password"
                        android:textSize="14sp"
                        android:layout_below="@+id/passwordEdt"
                        android:layout_centerHorizontal="true" />


                    <EditText
                        android:id="@+id/confirmpasswordEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Confirm Password"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:padding="15dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/saveBtn"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Save"
                            android:onClick="onDoneClick"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            tools:ignore="OnClick">
                        </Button>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>