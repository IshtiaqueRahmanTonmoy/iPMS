<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/retangle"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4285ca"
                        android:textSize="14dp"
                        android:layout_marginLeft="2dp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:text="Dr. Ahad Mahmud Khan"/>


                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consultant Research,The Doctors BD"
                        android:layout_marginLeft="2dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColor="#2d2d2d"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04:00PM - 08:00PM"
                        android:layout_marginLeft="2dp"
                        android:textSize="14dp"
                        android:textColor="#2d2d2d"
                        android:layout_marginTop="3dp"/>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:background="#E3E3E3"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookappoinment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#3c819f"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="BOOK APPOINMENT NOW"/>



            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
