<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <EditText
                android:id="@+id/et_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Search by district"
                android:textSize="14sp"
                android:gravity="start"
                android:maxLines="1"
                android:focusable="false"
                android:clickable="false"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/maps"
                android:inputType="textPersonName"
                android:padding="15dp" />


            <AutoCompleteTextView
                android:id="@+id/et_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Search by hospital"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/hospitalforedit"
                android:textSize="14sp"
                android:gravity="start"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:padding="15dp" />

        <AutoCompleteTextView
                android:id="@+id/et_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Searcy by speciality"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/stethoscope"
                android:textSize="14sp"
                android:gravity="start"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <Button
                android:id="@+id/searchBtn"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Search" />
        </LinearLayout>

</android.support.v7.widget.CardView>
